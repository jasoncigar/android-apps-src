<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/switcher" android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="first" />
		<Button android:id="@+id/swtichtosecond" android:text="switchtosecond"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="second" />
		<Button android:id="@+id/swtichtofirst" android:text="switchtofirst"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

</ViewSwitcher>